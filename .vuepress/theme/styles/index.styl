@import './jquery.fullPage.styl';
@font-face {
  font-family: 'icomoon';
  src:  url('/fonts/icomoon/icomoon.ttf');
  src:  url('/fonts/icomoon/icomoon.eot?wasbd#iefix') format('embedded-opentype'),
    url('/fonts/icomoon/icomoon.ttf?wasbd') format('truetype'),
    url('/fonts/icomoon/icomoon.woff?wasbd') format('woff'),
    url('/fonts/icomoon/icomoon.svg?wasbd#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
}
@font-face {
  font-family: 'fzsx';
  src: url('/fonts/fzsx/fzsx.eot');
  src:
    url('/fonts/fzsx/fzsx.eot?#font-spider') format('embedded-opentype'),
    url('/fonts/fzsx/fzsx.woff') format('woff'),
    url('/fonts/fzsx/fzsx.ttf') format('truetype'),
    url('/fonts/fzsx/fzsx.svg') format('svg');
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.icomoon,.icon{
  font-family: 'icomoon';
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.ml20{
  margin-left: 20px !important;
}
body{
  color:#151515;margin:0;background-color: #e6e4e2;
  font-family: Microsoft Yahei;
}
a{
  color:#151515;text-decoration: none;
}
a:hover{
  text-decoration: underline;
}
h3,p{
  margin:0;
}
ul{
  margin:0;padding:0;
}
ol{
  margin:0;padding-left:1em;
}
a img{border:none;}
.icon{
  display: inline-block;
  border:1px solid #bdb9b6;
  color:#bdb9b6;
  font-size: 20px;
  padding: 10px;
  text-decoration: none;
  border-radius: 50%;
  width: 20px;
  height: 20px;
  user-select: none;
}
.icon:hover{
  color:#999;
  border-color:#999;
  text-decoration: none;
}
.clearfix {*zoom:1}
.clearfix:after,.clearfix:before {
  content: "";
  display: table
}
.clearfix:after {
  clear: both
}
.tc{text-align: center;}
.fs14{font-size: 14px;}
.fs20{font-size: 20px;}
.fs22{font-size: 22px;}
.cl-red{
  color:#e1444f;
}
.fl{
  float:left;
}
.wrapper{
  width:1200px;margin:0 auto;
}
.fp-section{
  overflow: hidden;
}
.wechat{
  position: relative;
  img{
    position: absolute;
    top: 50px;
    display: none;
    width: 160px;
    left: 50%;
    margin-left: -75px;
  }
  &:hover{
    img{
      display: block;
    }
  }
}
.pagination,.pagination a {
  color: #666;
  line-height: 16px;
  font-size: 14px
}
.pagination ul{
  overflow: hidden;list-style: none;
}
.pagination li{
  float:left;
}
.pagination .pageinfo{
  display: inline-block;line-height: 26px;
}
.pagination a {
  display: inline-block;
  text-decoration: none;
  font-weight: 400;
  text-align: center;
  border: 1px solid #bbb;
  min-width: 16px;
  padding: 4px;
  margin: 0 5px 0 0;
  border-radius: 2px;
  background-color: #fff;
}
.pagination .thisclass a{
  background: #666;
  color: #fff;
  border-color: #444;
  cursor: default;
}
.logo{
  display: inline-block;
  width: 242px;
  height: 42px;
  margin: 19px 4%;
  background: url("/images/logo.png") no-repeat 0 0;
}
.banner-base{
}
.banner-base img{
  position: relative;left:50%;margin-left:-960px;
}
.sns{
  text-align: center;
  padding: 40px 0;
}
.sns .icon{
  margin: 0 10px;
}
.sns .icon:hover{
  background-color: #999;color:#fff;
}
.next-slider{
  position: fixed;
  left:50%;bottom:2%;z-index: 10;
  border:none;background-color: #fff;
  font-size: 30px;width:30px;height: 30px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.2)
}
.next-slider .up{display: none;}
.next-slider.do-up .down{display: none;}
.next-slider.do-up .up{display: block;}

