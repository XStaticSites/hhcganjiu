/* page-detail */
#page-detail .banner{
  width:100%;height: 457px;margin-top: 80px;
  background: url("/images/list_banner.jpg") center 0; 
}
#page-detail .page-detail{
  margin:32px 0;
  border-top: 1px solid #a35903;
  background-color: #fff;
  padding: 50px;
  position: relative;
  min-height: 500px;
}
#page-detail .page-detail .title{
  text-align: center;
  color:#231815;
  font-size: 22px;line-height: 1;
}
#page-detail .page-detail .info{
  text-align: center;margin: 14px 0;
  font-size: 14px;color:#a6a6a6;
}
#page-detail .page-detail .content{
  line-height: 1.8;
}
