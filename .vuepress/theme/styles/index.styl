/*page-list*/
#page-list .banner{
  width:100%;height: 457px;margin-top: 80px;
  background: url("/images/list_banner.jpg") center 0; 
}
#page-list .news-list{
  color:#343434;margin:30px 0;
}
#page-list .news-list .item{
  border-top:1px solid #a35903;
  background-color: #fff;
  height: 200px;
  border-bottom-right-radius: 25px;
  margin-bottom: 30px;
  padding-right: 200px;
  position: relative;
}
#page-list .news-list .img{
  width:360px;height: 200px;float:left;margin-right: 50px;
}
#page-list .news-list .img img{
  width:100%;height: 100%;vertical-align: top;
}
#page-list .news-list .title{
  display: block;
  font-size: 17px;
  margin: 50px 0 20px 0;
  line-height: 16px;
  color:#343434;
}
#page-list .news-list .summary{
  font-size: 13px;
  line-height: 24px;height: 72px;overflow: hidden;
}
#page-list .news-list .go{
  position: absolute;
  right:50px;top:50%;margin-top: -25px;
  border:none;background-color: #fff;
  font-size: 30px;width:30px;height: 30px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.2)
}

